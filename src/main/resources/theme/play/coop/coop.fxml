<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Integer?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<GridPane fx:id="coopRoot" gridLinesVisible="true" hgap="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.faforever.client.coop.CoopController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="55.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="45.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <VBox spacing="10.0">
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                  <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="250.0" HBox.hgrow="ALWAYS">
                     <children>
                              <ImageView fx:id="mapPreviewImageView" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                           <viewport>
                              <Rectangle2D />
                           </viewport>
                        </ImageView>
                     </children>
                  </Pane>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                        <GridPane hgap="10.0" maxWidth="1.7976931348623157E308" vgap="10.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" maxWidth="400.0" minWidth="100.0" prefWidth="200.0" />
                            <ColumnConstraints hgrow="ALWAYS" maxWidth="400.0" minWidth="200.0" prefWidth="200.0" />
                              <ColumnConstraints hgrow="ALWAYS" maxWidth="300.0" />
                          </columnConstraints>
                          <rowConstraints>
                              <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                            <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="ALWAYS" />
                              <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                            <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="ALWAYS" />
                              <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                          </rowConstraints>
                           <children>
                              <Label styleClass="h1-tmm" text="Choose mission" />
                                        <ComboBox fx:id="coopScenarioComboBox" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minWidth="100.0" prefHeight="40.0" prefWidth="400.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
                                        <ComboBox fx:id="missionComboBox" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="400.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
                              <Label styleClass="h1-tmm" text="Enter host settings" GridPane.rowIndex="2" />
                                        <TextField fx:id="titleTextField" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minWidth="100.0" prefHeight="40.0" prefWidth="400.0" promptText="%game.create.title" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />
                                        <PasswordField fx:id="passwordTextField" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="400.0" promptText="%game.create.password" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" />
                                        <Button fx:id="playButton" defaultButton="true" minWidth="150.0" mnemonicParsing="false" onAction="#onPlayButtonClicked" text="%coop.host.button" textOverrun="CLIP" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                           </children>
                        </GridPane>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            <VBox spacing="10.0">
               <children>
                  <Label styleClass="h1-tmm" text="Intel" />
                          <WebView fx:id="descriptionWebView" minHeight="100.0" minWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
                <StackPane fx:id="gameViewContainer" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="0.0" VBox.vgrow="ALWAYS">
                    <fx:include fx:id="gamesTable" source="../games_table.fxml" />
                </StackPane>
            </children>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </VBox>
        <VBox spacing="10.0" GridPane.columnIndex="1">
            <children>
                <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <children>
                        <Label contentDisplay="RIGHT" maxWidth="1.7976931348623157E308" styleClass="h2" text="%coop.leaderboard" HBox.hgrow="ALWAYS">
                            <graphic>
                                <Region fx:id="leaderboardInfoIcon" styleClass="icon, icon16x16, info-icon" />
                            </graphic>
                        </Label>
                        <TextField fx:id="leaderboardSearchTextField" promptText="%leaderboard.searchPrompt">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </TextField>
                        <ComboBox fx:id="numberOfPlayersComboBox" HBox.hgrow="NEVER">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <Integer fx:value="0" />
                                    <Integer fx:value="1" />
                                    <Integer fx:value="2" />
                                    <Integer fx:value="3" />
                                    <Integer fx:value="4" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </children>
                </HBox>
                <TableView fx:id="leaderboardTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="rankColumn" editable="false" maxWidth="64.0" minWidth="36.0" prefWidth="32.0" sortable="false" text="%coop.leaderboard.rank" />
                        <TableColumn fx:id="playerCountColumn" editable="false" maxWidth="1000.0" minWidth="24.0" prefWidth="50.0" sortable="false" text="%coop.leaderboard.players" />
                        <TableColumn fx:id="playerNamesColumn" editable="false" minWidth="24.0" prefWidth="-1.0" sortable="false" text="%coop.leaderboard.names" />
                        <TableColumn fx:id="secondaryObjectivesColumn" editable="false" maxWidth="1000.0" minWidth="24.0" prefWidth="-1.0" sortable="false" text="%coop.leaderboard.secondary" />
                        <TableColumn fx:id="dateColumn" editable="false" maxWidth="1000.0" minWidth="24.0" prefWidth="-1.0" sortable="false" text="%game.date" />
                        <TableColumn fx:id="timeColumn" editable="false" maxWidth="1000.0" minWidth="24.0" prefWidth="-1.0" sortable="false" text="%coop.leaderboard.time" />
                        <TableColumn fx:id="replayColumn" editable="false" maxWidth="1000.0" minWidth="50.0" prefWidth="-1.0" sortable="false" text="%coop.leaderboard.replay" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </GridPane.margin>
        </VBox>
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
